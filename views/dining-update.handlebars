<link rel="stylesheet" href="/style.css">

<h4>Update {{dining.name}} :</h4>
<form id="dining-update" action="/dining" method="put">
    <fieldset>
        <label>Name of Dining Location:</label> 
        <input type="text" name="name" value="{{dining.name}}">
        <br />
        <br />
        <label>Type of Service:</label>
        <input type="text" name="service" value="{{dining.service}}">
        <br />
        <br />
        <label>Type of Cuisine:</label> 
        <input type="text" name="cuisine" value="{{dining.cuisine}}">
        <br />
        <br />
        
        <input type="hidden" name="id" value="{{dining.diningID}}">
        <button onclick="updateDining({{dining.diningID}})">Update Dining</button>
    </fieldset>
</form>